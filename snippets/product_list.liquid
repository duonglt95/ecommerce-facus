{% for product in collections['featured-products'].products %}
     <div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 my-10">
          <a href="{{ product.url }}" class="text-center">
               <img
                    loading="lazy"
                    width="auto"
                    height="auto"
                    class="p-8 rounded-t-lg"
                    src="{{ product.featured_media | img_url: 'medium' }}"
                    alt="product"
               >
          </a>
          <div class="px-5 pb-5">
               <a href="{{ product.url }}">
                    <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
                         {{ product.title }}
                    </h5>
               </a>
               <div class="flex items-center mt-2.5 mb-5">
